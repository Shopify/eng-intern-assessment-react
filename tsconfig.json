{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs", // Changed to commonjs for Jest compatibility
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Added for CommonJS interoperability
    "types": ["node", "jest"] // Added Jest types
    // "typeRoots": ["node_modules/@types", "node_modules/@testing-library"]

  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules"]
}
